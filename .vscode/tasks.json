{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start",
            "type": "shell",
            "command": "cd introduction ; node main.js",
        },
        {
            "label": "push",
            "type": "shell",
            "command": "git add . ; git commit -m \"${input:commitMessage}\" ; git push origin main",
            "presentation": {
                "focus": true,
                "showReuseMessage": false,
                "clear": false
            }
        }
    ], "inputs": [
        {
            "id": "commitMessage",
            "type": "promptString",
            "description": "Commit message to push to github"
        }
    ]
}